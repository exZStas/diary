<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:d="urn:import:com.google.gwt.user.cellview.client"
>

    <ui:style>

        .introText {
            white-space: pre-wrap;
            word-wrap: normal;
            font-weight: bold;
            font-size: 1.5em;
        }

        .card {
            width: 100%;
            margin: 0px;
        }

        .categoryLabel {
            display: inline-block;
            width: 20em;
            font-weight: bold;
        }

        .categoryTextBox {
            width: 20em;
            margin-right: 20px;
            display: inline-block;
        }

        .grid {
            width: 100%;
            height: 50%;
        }

        .createButtonStyle {
            margin-bottom: -10%;
            margin-left: 30%;
        }

        .comeBackButtonStyle {
            margin-bottom: -10%;
            margin-left: 1%;
        }</ui:style>

    <m:MaterialPanel>
        <m:MaterialRow>
            <m:MaterialLabel ui:field="tableName" text="Users table" addStyleNames="{style.introText}"/>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialCard addStyleNames="{style.card}">
            <d:DataGrid ui:field="userTable" addStyleNames="{style.grid}"/>
            </m:MaterialCard>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialLabel text="Create event category" addStyleNames="{style.introText}"/>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialLabel text="Enter category name: " addStyleNames="{style.categoryLabel}" />
            <m:MaterialTextBox ui:field="categoryName" addStyleNames="{style.categoryTextBox}" />
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialLabel text="Enter color of category: " addStyleNames="{style.categoryLabel}" />
            <m:MaterialTextBox ui:field="categoryColor" addStyleNames="{style.categoryTextBox}" />
            <m:MaterialButton ui:field="createButton" text="Create category" addStyleNames="{style.createButtonStyle}" />
            <m:MaterialButton ui:field="comeBackButton" text="Back" addStyleNames="{style.comeBackButtonStyle}" />
        </m:MaterialRow>

    </m:MaterialPanel>
</ui:UiBinder>
