<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:h="urn:import:com.google.gwt.user.client.Window">

    <ui:with field="i18n" type="com.vm62.diary.frontend.client.common.messages.MessagesProvider"/>

    <ui:style>
        header, main, footer{
            padding-left: 280px;
        }
        .label{
            margin: 24px;
        }
        .footer{
            position: fixed;
            width: 100%;
            bottom: 0px;
            padding-top: 0px !important;
        }
        .width {
            width: 96%;
            padding: 0;
            margin: 0;
        }

        .crButton {
            width: 10%;
            margin-right: 7%;
            float: right;
        }

        .container{
            width: 100%;
            float: left;
            height: 700px;
        }

        .rows {
            width: 80%;
            margin-left: 10%;
            float: left;
        }

    </ui:style>
    <g:HTMLPanel>
        <header>
            <!-- NavBar -->
            <m:MaterialNavBar activates="sideNav" ui:field="navBar" paddingLeft="20" backgroundColor="BLUE">
                <m:MaterialNavBrand text="TPU's diary"/>
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialTooltip text="Events" position="BOTTOM">
                        <m:MaterialLink iconType="VIEW_MODULE" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Chart" position="BOTTOM">
                        <m:MaterialLink iconType="PIE_CHART" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                    <m:MaterialTooltip text="Notifications" position="BOTTOM">
                        <m:MaterialLink activates="sideNav" iconType="NOTIFICATIONS" iconPosition="NONE"/>
                    </m:MaterialTooltip>
                </m:MaterialNavSection>
            </m:MaterialNavBar>

            <!-- SideNav -->
            <m:MaterialSideNav type="FIXED" id="sideNav" closeOnClick="false" width="280">
                <ma:sideprofile.MaterialSideProfile>
                    <m:MaterialImage />
                    <m:MaterialLabel/>
                    <m:MaterialLink activates="dropProfile" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" textColor="WHITE"/>
                </ma:sideprofile.MaterialSideProfile>
                <m:MaterialLink text="Events" textColor="BLUE" iconType="WHATSHOT"/>
                <m:MaterialLink text="Chart" textColor="BLUE" iconType="PIE_CHART"/>
                <m:MaterialLink text="Notifications" textColor="BLUE" iconType="NOTIFICATIONS" separator="true"/>
                <m:MaterialLink text="Update schedule" textColor="BLUE" iconType="REFRESH"/>
                <m:MaterialLink text="Change profile" textColor="BLUE" iconType="CARD_MEMBERSHIP"/>
            </m:MaterialSideNav>

        </header>

        <!-- FAB -->
        <m:MaterialFAB>
            <m:MaterialButton ui:field="btnAddEvent" type="FLOATING" backgroundColor="RED" iconType="ADD" size="LARGE"/>
            <ma:window.MaterialWindow ui:field="window"  width="50%" title="Add Event" overflow="AUTO">
                <m:MaterialPanel addStyleNames="{style.container}" overflow="AUTO">
                    <m:MaterialColumn grid="s12 m12 l12">
                        <m:MaterialRow addStyleNames="{style.rows}">
                            <m:MaterialTextBox ui:field="eventName" placeholder="event" type="TEXT" iconType="EVENT_NOTE"/>
                        </m:MaterialRow>
                        <m:MaterialRow addStyleNames="{style.rows}">
                            <m:MaterialTitle title="Type of event"/>
                            <m:MaterialListBox placeholder="type" old="true">
                                <m:html.Option text="Education"/>
                                <m:html.Option text="Sport"/>
                                <m:html.Option text="Entertainment"/>
                                <m:html.Option text="Work"/>
                                <m:html.Option text="Homework"/>
                                <m:html.Option text="Trip"/>
                                <m:html.Option text="Household chores"/>
                                <m:html.Option text="Sleep"/>
                                <m:html.Option text="Eating"/>
                                <m:html.Option text="Other"/>
                            </m:MaterialListBox>
                        </m:MaterialRow>
                        <m:MaterialRow addStyleNames="{style.rows}">
                            <m:MaterialTitle title="Complexity" description="Select something."/>
                            <m:MaterialCheckBox ui:field="simple" text="simple" checked="true" width="20"/>
                            <m:MaterialCheckBox ui:field="complex" text="complex" width="20"/>
                        </m:MaterialRow>
                        <m:MaterialRow addStyleNames="{style.rows}">
                            <m:MaterialTitle title="Start time"/>
                            <ma:timepicker.MaterialTimePicker ui:field="tp" placeholder="Start time" hour24="true"/>
                        </m:MaterialRow>
                        <m:MaterialRow addStyleNames="{style.rows}">
                            <m:MaterialTitle title="Duration"/>
                            <m:MaterialRange ui:field="duration" min="5" max="600" value="60"/>
                            <m:MaterialLabel ui:field="lblRange" text="Value: 25" paddingBottom="20"/>
                        </m:MaterialRow>
                        <m:MaterialRow textAlign="LEFT"  backgroundColor="#ff8f00" addStyleNames="{style.crButton}">
                            <m:MaterialButton ui:field="btnCreate" text="create"/>
                        </m:MaterialRow>
                    </m:MaterialColumn>
                </m:MaterialPanel>
            </ma:window.MaterialWindow>
        </m:MaterialFAB>

        <!-- Footer -->
        <m:MaterialFooter backgroundColor="BLUE" type="FIXED">
            <m:MaterialFooterCopyright>
                <m:MaterialLabel text="Â© 2016 Copyright VM62 design group" />
            </m:MaterialFooterCopyright>
        </m:MaterialFooter>
    </g:HTMLPanel>
</ui:UiBinder>
