<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
>

    <ui:style field="style">
        .container {
            display: inline-block;
            overflow-y: auto;
            overflow-x: hidden;
            font-size: 16px;
            background: #FFFFF9;
        }

        img{
            width:47px;
            height: 50px;
        }

        .mainContainer {
            display: inline-block;
            margin: 0 !important;
        }

        .smileImage {
            width: 30px;
            height: 30px;
            margin: 5px;
            cursor: hand;
            cursor: pointer;
        }
    </ui:style>

    <m:MaterialPanel addStyleNames="{style.container}">
        <m:MaterialRow ui:field="signsPanel" addStyleNames="{style.mainContainer}">
        </m:MaterialRow>
    </m:MaterialPanel>
</ui:UiBinder>